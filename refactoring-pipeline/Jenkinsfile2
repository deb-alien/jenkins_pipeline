pipeline {
    agent any

    environment{
        VERSION = '0.1.0'
        RELEASE_VERSION = 'R.2'
    }

    stages {
        stage('Audit Tools') {
            steps {
                sh '''
                    git version
                    java -version
                    mvn -version
                '''
            }
        }

        stage('Unit Test') {
            steps {
                dir('./samples/java-tomcat-sample') {
                    sh '''
                        echo "Executing Unit Tests..."
                        mvn test
                    '''
                }
            }
        }

        stage('Build') {
             echo "Building version: ${VERSION} with suffix: ${RELEASE_VERSION}"

            steps {
                dir('./samples/java-tomcat-sample') {
                    sh '''
                        mvn versions:set -DnewVersion="${VERSION}"-SNAPSHOT
                        mvn versions:update-child-modules
                        mvn clean package
                    '''
                }
            }
        }
    }
}
